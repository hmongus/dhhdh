void p_presentacion()
{
    int x = 30, y = 1, dy = 1;
    int clr = 2 + rand() % 14;
    Console::SetCursorPosition(x, y); color(clr); cout << R"(
                    ___  ___ ___  ___________ ___________  ___ ______ _____ 
                    |  \/  |/ _ \|___  |  ___/  __ | ___ \/ _ \|  ___|_   _|
                    | .  . / /_\ \  / /| |__ | /  \| |_/ / /_\ | |_    | |  
                    | |\/| |  _  | / / |  __|| |   |    /|  _  |  _|   | |  
                    | |  | | | | ./ /__| |___| \__/| |\ \| | | | |     | |  
                    \_|  |_\_| |_\_____\____/ \____\_| \_\_| |_\_|     \_/                                                         
                    
                        )" << "\n";

    while (true)
    {
        clr = 2 + rand() % 14;
        Console::SetCursorPosition(x, y); color(1); cout << R"(
                    ___  ___ ___  ___________ ___________  ___ ______ _____ 
                    |  \/  |/ _ \|___  |  ___/  __ | ___ \/ _ \|  ___|_   _|
                    | .  . / /_\ \  / /| |__ | /  \| |_/ / /_\ | |_    | |  
                    | |\/| |  _  | / / |  __|| |   |    /|  _  |  _|   | |  
                    | |  | | | | ./ /__| |___| \__/| |\ \| | | | |     | |  
                    \_|  |_\_| |_\_____\____/ \____\_| \_\_| |_\_|     \_/                                                         
                    
                        )" << "\n";
        y += dy;
        Console::SetCursorPosition(x, y); color(clr); cout << R"(
                    ___  ___ ___  ___________ ___________  ___ ______ _____ 
                    |  \/  |/ _ \|___  |  ___/  __ | ___ \/ _ \|  ___|_   _|
                    | .  . / /_\ \  / /| |__ | /  \| |_/ / /_\ | |_    | |  
                    | |\/| |  _  | / / |  __|| |   |    /|  _  |  _|   | |  
                    | |  | | | | ./ /__| |___| \__/| |\ \| | | | |     | |  
                    \_|  |_\_| |_\_____\____/ \____\_| \_\_| |_\_|     \_/                                                         
                    
                        )" << "\n";

        if (y == 20)
        {
            dy = 0;
            Console::SetCursorPosition(x, 1); color(clr); cout << R"(
                                        _________-----_____
                             _____------           __      ----_
                     ___----             ___------              \
                        ----________        ----                 \
                                    -----__    |             _____)
                                         __-                /     \
                             _______-----    ___--          \    /)\
                       ------_______      ---____            \__/  /
                                    -----__    \ --    _          /\
                                          --__--__     \_____/   \_/\
                                                  ----|   /          |
                                                      |  |___________|
                                                      |  | ((_(_)| )_)
                                                      |  \_((_(_)|/(_)
                                                      \             (
                                                       \_____________)
                                                      
                    
                        )" << "\n";
            cursor(x + 2, y + 9); color(12); cout << "PRESIONE ESPACIO PARA CONTINUAR";

        }
        if (kbhit())
        {
            char tecla = getch();
            if (tecla == SPACEBAR)break;
        }
        _sleep(100);
    }
    Console::Clear();
    return;
}

