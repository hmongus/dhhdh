void pp_borra(int x, int y) { //borra al presonaje principal

    int temporalx;
    temporalx = x; //para regenar el valor de x inicial
    char mati[3][3] = {
        {32,32,32},
        {32,32,32},
        {32,32,32},
    };
    color(1);
    for (int f = 0; f < 3; f++, y++)
    {
        for (int c = 0; c < 3; c++, x++)
        {
            cursor(x, y);
            cout << mati[f][c];
        }
        x = temporalx;
    }
}
