void jefe_final_borrar(int xxx, int yyy) {
    char matriz_a[6][14];
    color(7);
    int xx = xxx;
    int yy = yyy;

    for (int f = 0; f < 6; f++, yy++)
    {

        for (int c = 0; c < 14; c++, xx++)
        {
            matriz_a[f][c] = 32;
            cursor(xx, yy);
            cout << matriz_a[f][c];
        }
        xx = xxx;
    }
}

